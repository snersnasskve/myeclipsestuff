<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/llTableItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTableChoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chore_name" 
            android:textColor="@android:color/black" 
                        android:textAppearance="?android:attr/textAppearanceLarge"
            
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_right"
                android:text="@string/due" 
                         android:textColor="@android:color/black" 
  />

            <TextView
                android:id="@+id/tvTableDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_right"
                android:text="@string/chore_date" 
                         android:textColor="@android:color/black" 
  />

      <TextView
          android:id="@+id/tvTableTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"
          android:text="@string/chore_time" 
                   android:textColor="@android:color/black"  />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

             <TextView
                 android:id="@+id/textView10"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_right"
                 android:text="@string/freq"
                 android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvTableFreqNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_right"
                android:text="@string/time" 
                         android:textColor="@android:color/black" 
  />

            <TextView
                android:id="@+id/tvTableFreqUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/abc_dropdownitem_text_padding_left"
                android:text="@string/unit" 
                         android:textColor="@android:color/black"
  />

        </LinearLayout>

    </LinearLayout>

</TableRow>
