<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_right" >

    <LinearLayout
        android:id="@+id/llWalkInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/abc_action_bar_icon_vertical_padding"
        android:layout_marginRight="@dimen/abc_dropdownitem_text_padding_right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvWalkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/small_button_width"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWalkDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/small_button_width"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvWalkLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />

        <Button
            android:id="@+id/btnGoToWalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/small_button_width"
            android:gravity="center_horizontal|center"
            android:text="@string/go_to_walk"
                       android:textAppearance="?android:attr/textAppearanceMedium"
            
            android:textStyle="bold" />

    </LinearLayout>

</TableRow>
