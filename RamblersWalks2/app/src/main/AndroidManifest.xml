<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kve.ramblerswalks"
    android:versionCode="1"
    android:versionName="1.0" >


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/runlogo"
        android:label="@string/app_name"
          android:theme="@android:style/Theme" >
        <activity
            android:name=".RamblersMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
              <activity
            android:name="com.kve.ramblerswalks.Weekdays"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.kve.ramblerswalks.WEEKDAYS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kve.ramblerswalks.WalkSummary"
            android:label="@string/title_activity_walk_summary" >
            <intent-filter>
                <action android:name="com.kve.ramblerswalks.WALKSUMMARY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
        
 
</manifest>
