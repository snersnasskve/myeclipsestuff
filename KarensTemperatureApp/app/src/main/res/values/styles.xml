<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="temp_text_style" parent="android:Widget.Material.EditText">
        <item name="android:layout_width">@dimen/temp_text_width</item>
        <item name="android:layout_height">@dimen/temp_text_height</item>
        <item name="android:layout_marginTop">@dimen/wide_padding</item>
        <item name="android:paddingStart">@dimen/wide_padding</item>
        <item name="android:paddingEnd">@dimen/wide_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">@dimen/temp_text_size</item>
    </style>

    <style name="temp_icon_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/temp_icon_width</item>
        <item name="android:layout_height">@dimen/temp_icon_height</item>
        <item name="android:contentDescription">@string/celcius_temp</item>
        <item name="android:layout_marginTop">@dimen/wide_padding</item>
        <item name="android:alpha">0.5</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:visibility">visible</item>
        <item name="android:paddingStart">@dimen/wide_padding</item>
        <item name="android:paddingEnd">@dimen/wide_padding</item>

    </style>

</resources>
